{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "ES2019", "es2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ]
}
