{
  "compilerOptions": {
    "target": "ES6",
    "module": "es6",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "baseUrl": "./src/",
    "paths": {
      "@defaultSettings": ["code/modules/default-settings.js"],
      "@components/*": ["ui/components/*"],
      "@styles/*": ["ui/styles/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": ["node_modules"]
}
